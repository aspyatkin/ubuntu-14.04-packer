{
  "description": "A Packer template to build Ubuntu 14.04 Server box",
  "min_packer_version": "0.8.6",
  "variables": {
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Ubuntu_64",
      "iso_url": "http://releases.ubuntu.com/14.04.3/ubuntu-14.04.3-server-amd64.iso",
      "iso_checksum": "a3b345908a826e262f4ea1afeb357fd09ec0558cf34e6c9112cead4bb55ccdfb",
      "iso_checksum_type": "sha256",
      "http_directory": "http",
      "disk_size": 20480,
      "headless": false,
      "vm_name": "packer-ubuntu-14.04-server-amd64",
      "hard_drive_interface": "sata",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--audio",
          "none"
        ]
      ],
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz ",
        "initrd=/install/initrd.gz ",
        "biosdevname=0 ",
        "auto-install/enable=true ",
        "debconf/priority=critical ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg ",
        "<enter>"
      ],
      "ssh_wait_timeout": "60m",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "sudo poweroff",
      "output_directory": "build"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/apt.sh",
        "scripts/virtualbox.sh",
        "scripts/vagrant.sh",
        "scripts/sshd.sh",
        "scripts/cleanup.sh",
        "scripts/minimize.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 6,
      "output": "ubuntu-14.04-server-amd64.box"
    }
  ]
}
